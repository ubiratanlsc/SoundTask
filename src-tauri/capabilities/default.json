{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-app-write",
    "fs:allow-exists",
    "fs:write-all",
    "fs:allow-read",
    "fs:allow-write",
    "fs:write-files",
    "fs:allow-app-write-recursive",
    "fs:allow-watch",
    "fs:allow-desktop-write-recursive",
    "fs:allow-data-read-recursive",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$DESKTOP/*"
        }
      ]
    }
  ]
}